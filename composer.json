{
    "name": "jandlouhy/game",
    "description": "Game of Life",
    "type": "project",
    "authors": [
        {
            "name": "jandlouhy",
            "email": "jan@jandlouhy.cz"
        }
    ],
    "license": "MIT",
    "config": {
        "sort-packages": true,
        "classmap-authoritative": true
    },
    "scripts": {
        "run": "php index.php game:run",
        "docker": "docker run --rm -v $(pwd):/app -w /app php:7.2-cli php index.php game:run",
        "phpcs": "./vendor/bin/phpcs --standard=PSR2 src tests",
        "phpstan": "./vendor/bin/phpstan analyse src tests --level max",
        "tests": "./vendor/bin/phpunit --bootstrap vendor/autoload.php tests",
        "check": [
            "composer validate --no-check-all --strict",
            "@phpcs",
            "@phpstan",
            "@tests"
        ]
    },
    "autoload": {
        "psr-4": {
            "Game\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Game\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "7.2.*",
        "symfony/config": "^4.0",
        "symfony/console": "^4.0",
        "symfony/dependency-injection": "^4.0",
        "symfony/yaml": "^4.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.9.2",
        "phpunit/phpunit": "^7",
        "squizlabs/php_codesniffer": "^3.2"
    }
}
